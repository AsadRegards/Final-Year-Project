<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    
     <ImageView
        android:src="@drawable/backgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        
        android:id="@+id/imgbackgo"
       
         />
     <ImageView
        android:src="@drawable/changeph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgheadaccounts"
       
         />
    <ImageView
        android:src="@drawable/phone_50px2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        
        android:id="@+id/imgaccounticon"
       
         />
    <ImageView
        android:background="#646464"
        android:layout_width="match_parent"
        android:layout_height="2dp"   
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imglinehead"
        android:layout_below="@+id/imgheadaccounts"
       
         />
    
   
    <Refractored.Controls.CircleImageView
        android:src="@drawable/usericon"
        android:layout_width="70dp"
        android:layout_height="70dp"   
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        android:id="@+id/usericon"
        android:layout_below="@+id/imgheadaccounts"
       
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="90dp"
        android:textColor="#000"
        android:id="@+id/username"
        android:layout_below="@+id/imgheadaccounts"
       
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentpass"
        android:text="Current Password"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/username"
        android:textColor="#000"/>
    <ImageView
        android:src="@drawable/key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/currentpass"
        android:id="@+id/imgcpass"
       
         />
    <EditText
        android:inputType="textPassword"
        android:layout_width="250dp"
        
        
        android:textColor="#000"
        android:textColorHint="#858585"
        
        android:layout_centerHorizontal="true"
        
        android:layout_below="@+id/currentpass"
        android:layout_height="50dp"
        
        android:id="@+id/edtCurrentPass" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newMobile"
        android:text="New Mobile no"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/currentpass"
        android:textColor="#000"/>
    <ImageView
        android:src="@drawable/newphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/newMobile"
        android:id="@+id/imgcpass2"
       
         />
    <EditText
        android:inputType="textPassword"
        android:layout_width="250dp"
        
        
        android:textColor="#000"
        android:textColorHint="#858585"
        
        android:layout_centerHorizontal="true"
        
        android:layout_below="@+id/newMobile"
        android:layout_height="50dp"
        
        android:id="@+id/edtNewMob" />

    <ImageView
        android:src="@drawable/submm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/edtNewMob"
        android:id="@+id/imgsubmitt"
       
         />
</RelativeLayout>
