<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">
    
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tev1"
        android:text="@string/Create"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
   
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/Manhole1_btnnext"
        android:src="@drawable/iconnext"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnback"
        android:src="@drawable/backgo"
        android:layout_marginTop="10dp"
        
        
        />
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView_Manhole1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/Manhole1_tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Manhole1"
        android:layout_below="@+id/Manhole1_tvusername"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Manhole1_tv"
        android:textAlignment="center"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:src="@drawable/issue_manhole1"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="80dp"
        
        android:layout_below="@+id/Manhole1_tvusername"
        android:id="@+id/iconIssue1"
        android:layout_marginRight="170dp"
           />

   
     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="100dp"
        
        android:layout_below="@+id/Manhole1_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/Manhole1_radiobtn1" />
        <ImageView
        android:src="@drawable/issue_manhole2"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="170dp"
        android:layout_below="@+id/Manhole1_radiobtn1"
        android:id="@+id/iconIssue2"
           />


     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginStart="145dp"
        android:layout_toRightOf="@+id/Manhole1_radiobtn1"
        android:layout_below="@+id/Manhole1_radiobtn1"
        android:background="@drawable/ellipse1"
        android:id="@+id/Manhole1_radiobtn2" />
</RelativeLayout>
