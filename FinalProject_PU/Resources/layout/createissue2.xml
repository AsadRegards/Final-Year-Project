<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

     <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tev1"
        android:text="@string/Create"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imganext"
        android:src="@drawable/iconnext"
        android:layout_marginTop="12dp"
        android:layout_marginStart="320dp"/>
   <!-- circle image view profile pic-->
        <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView2"
        />
    <!-- text view change on runtime-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infoprob"
        android:layout_below="@id/tvusername"
        android:textSize="15dp"
        android:id="@+id/tvinfoproblem"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:src="@drawable/iss1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvinfoproblem"
        android:layout_marginTop="10dp"
        android:id="@+id/imgbtn1"
           />
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvinfoproblem"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton1" />
    <ImageView
        android:src="@drawable/iss2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn1"
        android:layout_marginTop="10dp"
        android:id="@+id/imgbtn2"
           />    
     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/imgbtn1"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton2" />
    <ImageView
        android:src="@drawable/iss3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn2"
        android:layout_marginTop="10dp"
        android:id="@+id/imgbtn3"
           />            
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/imgbtn2"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton3" />
        <ImageView
        android:src="@drawable/iss4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn3"
        android:layout_marginTop="10dp"
        android:id="@+id/imgbtn4"
           />            
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/imgbtn3"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton4" />
        <ImageView
        android:src="@drawable/iss5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvinfoproblem"
        android:layout_marginTop="10dp"
        android:layout_marginStart="190dp"
        android:id="@+id/imgbtn5"
           />    
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="200dp"
        android:layout_below="@+id/tvinfoproblem"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton5" />
    <ImageView
        android:src="@drawable/iss6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="190dp"
        android:id="@+id/imgbtn6"
           />
        <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="196dp"
        android:layout_below="@+id/imgbtn5"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton6" />
        <ImageView
        android:src="@drawable/iss7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn6"
        android:layout_marginTop="10dp"
        android:layout_marginStart="190dp"
        android:id="@+id/imgbtn7"
           />    
            <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="200dp"
        android:layout_below="@+id/imgbtn6"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton7" />
            <ImageView
        android:src="@drawable/iss8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn7"
        android:layout_marginTop="10dp"
        android:layout_marginStart="190dp"
        android:id="@+id/imgbtn8"
           />    
            <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="196dp"
        android:layout_below="@+id/imgbtn7"
        android:background="@drawable/ellipse1"
        android:id="@+id/radioButton8" />
    <com.dushyant.roundedimageviewlibrary.RoundedImageView
        android:src="@drawable/issimg"
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imgbtn8"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imgbtn9"
        android:layout_centerHorizontal="true"
           />    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/close"
        android:src="@drawable/cclose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
       />

    

   

</RelativeLayout>
