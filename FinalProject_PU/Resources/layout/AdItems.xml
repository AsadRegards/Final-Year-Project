<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbars="horizontal|none">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
    >




        <com.dushyant.roundedimageviewlibrary.RoundedImageView
            android:src="@drawable/hellow"
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:paddingBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:id="@+id/imgIssue"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            />
        
        <com.dushyant.roundedimageviewlibrary.RoundedImageView

            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:paddingBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:visibility="visible"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            android:scrollbars="horizontal"
            android:id="@+id/hardcoded"
            android:scaleType="centerCrop"
            android:contentDescription="description"
            tools:ignore="MissingDimension,Suspicious0dp" />

       
        <TextView
            android:text="Sponsored"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adtext"
            
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            
            
            android:textSize="12dp"
            android:textColor="#767676"

            android:fontFamily="serif"
            android:id="@+id/tvsponsered" />
        <TextView
            android:text="Halloween Sale"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIssue"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textColor="#0078e3"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:id="@+id/adtitle" />



        <TextView
            android:text="Have a spooky  All Halloween's Even."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adtitle"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:maxLines="3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="40dp"
            
            android:textColor="#000"
            
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            
            android:id="@+id/adtext" />
        
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/newbtn"
            android:layout_below="@id/adtext"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            
            android:id="@+id/adgoButton"/>
                









    </RelativeLayout>



</androidx.cardview.widget.CardView>