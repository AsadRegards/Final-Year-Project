<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbars="horizontal|none">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
    >



             <com.dushyant.roundedimageviewlibrary.RoundedImageView
            android:src="#3B414B"

            android:layout_width="320dp"
            android:layout_height="306dp"
            android:layout_marginTop="280dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgbelowPath"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            />
   
        <com.dushyant.roundedimageviewlibrary.RoundedImageView
            android:src="@drawable/pothole1"
            android:layout_width="320dp"
            android:layout_height="267dp"          
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:id="@+id/imgIssue"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            />
        <com.dushyant.roundedimageviewlibrary.RoundedImageView

            android:layout_width="320dp"
            android:layout_height="267dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:visibility="visible"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            android:scrollbars="horizontal"
            android:id="@+id/imageView1"
            android:scaleType="centerCrop"
            android:contentDescription="description"
            tools:ignore="MissingDimension,Suspicious0dp" />
        <Refractored.Controls.CircleImageView
            android:src="@drawable/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="330dp"
            android:layout_marginStart="50dp"
            android:id="@+id/imgProfile"
         />
        
        <TextView
            android:text="Nabeel Khan"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIssue"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgProfile"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:id="@+id/tvname" />

        <TextView
            android:text="24m"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvname"
            android:layout_toRightOf="@id/imgProfile"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvtime" />
        


        <TextView
            android:text="Open Road Spill not filled with water near Gulshan e Iqbal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIssue"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:maxLines="3"
            android:layout_marginTop="60dp"

            android:layout_centerInParent="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="40dp"
            
            android:textColor="#fff"
            
            android:textStyle="normal"
            android:id="@+id/tvinfo" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnstatushome2"
            android:layout_below="@id/tvinfo"
            android:layout_marginStart="60dp"
            android:layout_marginTop="45dp"
            android:id="@+id/ViewStatus"/>
        <TextView
            android:text="View Status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewStatus"
            android:layout_toLeftOf="@id/ViewOnMap"
             android:maxLines="2"
            android:layout_marginStart="50dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:id="@+id/tvViewstatus" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnmaphome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/ViewStatus"
            android:layout_marginStart="20dp"
            android:layout_marginTop="47dp"
            android:id="@+id/ViewOnMap"/>
        <TextView
            android:text="View On Map"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewOnMap"
            android:layout_toLeftOf="@id/Report"
            android:layout_toRightOf="@id/ViewStatus"
             android:maxLines="2"
           android:layout_marginStart="15dp" 
            android:textAlignment="center"
            android:textSize="12dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:id="@+id/tvViewOnMap" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnreporthome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/ViewOnMap"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:id="@+id/Report"/>
                <TextView
            android:text="Report"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Report"
            android:layout_toLeftOf="@id/ContributeHome"
            android:layout_toRightOf="@id/ViewOnMap"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvReport" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnfundshome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/Report"
            android:layout_marginStart="20dp"
            android:layout_marginTop="47dp"
            android:id="@+id/ContributeHome"/>
        <TextView
            android:text="Fund"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContributeHome"
            android:layout_toLeftOf="@id/GoLast"
            android:layout_toRightOf="@id/Report"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvContribute" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/ContributeHome"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:id="@+id/GoLast"/>
                <TextView
            android:text="Refresh"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContributeHome"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/ContributeHome"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvGoLast" />












    </RelativeLayout>



</androidx.cardview.widget.CardView>