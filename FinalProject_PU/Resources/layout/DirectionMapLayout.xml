<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0078e3">


     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/map_placeholder">
       
        


     </FrameLayout>

     <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffff"
        android:drawableStart="@drawable/greendot1"
        android:drawablePadding="2dp"
        android:minWidth="25px"
        
        android:hint="Start Location"
        android:minHeight="25px"
        android:id="@+id/materialTextView1" />

     <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/materialTextView1"
        android:background="#ffff"
        android:text="Destination"
        android:minWidth="25px"
        android:minHeight="25px"
        android:drawableStart="@drawable/reddot1"
        android:drawablePadding="2dp"
        android:id="@+id/materialTextView2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:id="@+id/pinid"
        android:background="@drawable/locationpointnew"
        />

   <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"        
        android:id="@+id/radioButton1" />

    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/radioButton1"
        android:id="@+id/radioButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET DIRECTION"
        android:id="@+id/getdirection"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
     

   






