<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

     <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/close"
        android:src="@drawable/cclose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
       />
    <ImageView
        android:src="@drawable/backgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        
        android:id="@+id/backbtn6"
       
         />

             <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tev1"
        android:text="@string/Create"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/create_issue4_btnnext"
        android:src="@drawable/iconnext"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"/>
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/create_issue_3_tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createissue6"
        android:layout_below="@+id/create_issue_3_tvusername"
        android:textSize="15dp"
        android:id="@+id/create_issue_4_tv"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:src="@drawable/group325"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_issue_4_tv"
        android:layout_marginTop="10dp"
        android:id="@+id/crt_issue_6_radio1"
           />
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/create_issue_4_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/create_issue6_radiobtn1" />

    <ImageView
        android:src="@drawable/group326"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_issue_4_tv"
        android:layout_marginTop="130dp"
        android:id="@+id/crt_issue_6_radio2"
           />
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/create_issue6_radiobtn1"
        android:background="@drawable/ellipse1"
        android:id="@+id/create_issue6_radiobtn2" />

        <ImageView
        android:src="@drawable/group327"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_issue6_radiobtn1"
        android:layout_marginTop="185dp"
        android:id="@+id/crt_issue_6_radio3"
           />
    <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/create_issue6_radiobtn2"
        android:background="@drawable/ellipse1"
        android:id="@+id/create_issue6_radiobtn3" />

   
</RelativeLayout>
