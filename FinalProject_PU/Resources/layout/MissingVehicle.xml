<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

         <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tev1"
        android:text="@string/MissingVehicle_Head"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
   
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/next_MissingVehicle"
        android:src="@drawable/iconnext"
        android:layout_marginTop="12dp"
        android:layout_marginStart="320dp"/>
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView_MissingVehicle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/MissingVehicle_tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MissingVehicle2_infor"
        android:layout_below="@+id/MissingVehicle_tvusername"
        android:textSize="12dp"
        android:id="@+id/MissingVehicle_tv"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:src="@drawable/missingvehicle"
        android:layout_width="362dp"
        android:layout_height="160dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/MissingVehicle_tvusername"
        android:id="@+id/MissingVehicle_image"
           />

   
     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/MissingVehicle_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/MissingVehicle_Radiobtn1" />

        <ImageView
        android:src="@drawable/foundvehicle"
        android:layout_width="362dp"
        android:layout_height="255dp"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/MissingVehicle_tvusername"
        android:id="@+id/FoundVehicle_image"
           />


     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/MissingVehicle_Radiobtn1"
        android:background="@drawable/ellipse1"
        android:id="@+id/FoundVehicle_Radiobtn2" />
   
</RelativeLayout>
