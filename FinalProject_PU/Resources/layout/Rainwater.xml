<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

 <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tev1"
        android:text="@string/Create"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
 
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/Rainwater_btnnext"
        android:src="@drawable/iconnext"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"/>
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView_Rainwater"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/Rainwater_tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe the condition of Rainwater on road"
        android:layout_below="@+id/Rainwater_tvusername"
        android:textSize="12dp"
        android:id="@+id/Rainwater_tv"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:src="@drawable/allvehicle"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Rainwater_tvusername"
        android:id="@+id/allVehicle"
           />

   
     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="85dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Rainwater_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/radiobtn1Rainwater" />
        <ImageView
        android:src="@drawable/novehicle"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="180dp"
        android:layout_below="@+id/radiobtn1Rainwater"
        android:id="@+id/noVehicle"
           />
    <ImageView
        android:src="@drawable/highvehicle"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/radiobtn1Rainwater"
        android:id="@+id/highVehicle"
        android:layout_marginRight="170dp"
           />

     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginStart="255dp"
        android:layout_below="@+id/radiobtn1Rainwater"
        android:background="@drawable/ellipse1"
        android:id="@+id/radiobtn3Rainwater" />
         <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginStart="75dp"
        android:layout_below="@+id/radiobtn1Rainwater"
        android:background="@drawable/ellipse1"
        android:id="@+id/radiobtn2Rainwater" />

</RelativeLayout>
