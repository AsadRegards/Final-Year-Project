<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    
    <ImageView
        android:src="@drawable/adspayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp" 
        android:id="@+id/textviewhead"
        android:layout_centerHorizontal="true"
       
         />
    <ImageView
        android:src="@drawable/icnads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        
        android:id="@+id/imgaccounticon"
       
         />
        <ImageView
        android:src="@drawable/backgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="15dp"
        android:id="@+id/imggoback"
       
         />
    <ImageView
        android:src="@drawable/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imglinehead"
        android:layout_below="@+id/textviewhead"
       
         />
<TextView
        android:text="@string/TextPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgTextContribute"
        android:layout_below="@+id/imglinehead"
       
         />
    <ImageView
        android:src="@drawable/groupeasypaisa"
        android:layout_width="150dp"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"        
        android:id="@+id/imgEasyPaisa"
        android:layout_below="@+id/imgTextContribute"
       
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EasyPaisa"
        android:layout_below="@id/RadioEasypaisa"
        android:layout_marginTop="80dp"
        android:layout_marginStart="55dp"
        android:id="@+id/TextEasyPaisa"
    />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"        
        android:id="@+id/RadioEasypaisa"
        android:layout_below="@+id/imgTextContribute"    
        />
    <ImageView
        android:src="@drawable/groupjazz"
        android:layout_width="150dp"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@id/imgJazzCash"
        android:layout_below="@+id/imgEasyPaisa"
       
         />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"        
        android:id="@+id/RadioJazzcash"
        android:layout_below="@id/imgEasyPaisa"    
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/JazzCash"
        android:layout_below="@id/RadioJazzcash"
        android:layout_marginTop="80dp"
        android:layout_marginStart="55dp"
        android:id="@+id/TextJazzCash"
    />

        <ImageView
        android:src="@drawable/groupbank"
        android:layout_width="150dp"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgEasyPaisa"
        android:layout_below="@id/imgTextContribute"
        android:layout_marginStart="25dp"
        android:id="@id/imgBankTransfer"
        
       
         />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"        
        android:id="@+id/Radiobank"
        android:layout_toRightOf="@id/imgEasyPaisa"
        
        android:layout_below="@+id/imgTextContribute"    
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BankAccount"
        android:layout_below="@id/Radiobank"
        android:layout_toRightOf="@id/imgEasyPaisa"
        android:layout_marginTop="85dp"
        android:layout_marginStart="60dp"
        android:id="@+id/TextBank"
    />

    <ImageView
        android:src="@drawable/groupcreditcard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgEasyPaisa"
        android:layout_marginStart="25dp"
        android:id="@+id/CreditCard"
        android:layout_below="@+id/imgBankTransfer"
       
         />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"        
        android:id="@+id/Radiocard"
        android:layout_toRightOf="@id/imgEasyPaisa"
        
        android:layout_below="@id/imgBankTransfer"    
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CardPayment"
        android:layout_below="@id/Radiocard"
        android:layout_toRightOf="@id/imgEasyPaisa"
        android:layout_marginTop="85dp"
        android:layout_marginStart="60dp"
        android:id="@+id/TextCard"
    />

    
    

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/close"
        android:src="@drawable/cclose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
       />
    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/button1" />

</RelativeLayout>