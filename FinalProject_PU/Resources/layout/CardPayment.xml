<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/Headimg"
        android:layout_marginTop="20dp"
        android:src="@drawable/bgimg"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HeadText"
        android:src="@drawable/headpayment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Back"
        android:src="@drawable/backgo"
        
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:layout_marginTop="250dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:id="@+id/txtCardNo"
        android:layout_below="@+id/HeadText"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtCardNo"    
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgtext"
        android:layout_below="@+id/HeadText"
        android:layout_marginTop="280dp"
        android:inputType="number"
    
        
        
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:paddingStart="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/txtExpiryDate"
        android:layout_below="@id/edtCardNo"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/edtExpiryDateMonth"
        android:layout_marginStart="10dp"
        android:hint="MM"
        android:textAlignment="center"
        android:background="@drawable/bgtext"
        android:layout_below="@+id/txtExpiryDate"
        android:inputType="number"
        
        />
    <EditText
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/edtExpiryDateYear"
        android:layout_marginStart="20dp"
        android:hint="YY"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/edtExpiryDateMonth"
        android:background="@drawable/bgtext"
        
        android:layout_below="@+id/txtExpiryDate"
        android:inputType="number"
        
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cvc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/txtCvc"
       
        android:layout_below="@+id/edtCardNo"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtCvc"
        android:layout_marginStart="60dp"
        android:background="@drawable/bgtext"
        android:layout_below="@+id/txtExpiryDate"
        android:inputType="number"
        android:layout_toRightOf="@+id/edtExpiryDateYear"
        
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/txtAmount"
        android:layout_below="@+id/edtExpiryDateMonth"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtAmount" 
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgtext"
        android:layout_below="@+id/txtAmount"
        android:inputType="number"
 
        />
   
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/paynow"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/paynow"/>
</RelativeLayout>
