<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin">
    <ImageView
        android:src="@drawable/iconwhitecomplete"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:id="@+id/imageView1" />
    <TextView
        android:text="@string/Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/textView1" />
    
    
    <ImageView
        android:src="@drawable/asset2"
        android:layout_width="@dimen/_300sdp"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/_342sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/textView1"
        android:id="@+id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="@string/Email"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_below="@+id/textView1"
        android:textColor="#858585"/>

    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="@dimen/_220sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/imageView1"
        android:textColor="#000"
        android:layout_toRightOf="@id/imgemail"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_below="@+id/textView1"
        android:layout_height="wrap_content"
        android:id="@+id/edtEmail" />


    <ImageView
        android:src="@drawable/email"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:id="@+id/imgemail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="@string/Password"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_below="@+id/textView2"
        android:textColor="#858585"/>
    <ImageView
        android:src="@drawable/pass"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_145sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_below="@+id/textView1"
        android:id="@+id/imgpass"/>
    
   
    
    <TextView
        android:text="@string/Forgot"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="#858585"
        android:layout_below="@+id/textInputLayout1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_50sdp"
        android:id="@+id/tvForgotPass" />
    <ImageView
        android:src="@drawable/group237"
        android:layout_width="@dimen/_87sdp"
        android:layout_height="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_below="@id/imgpass"
        android:id="@+id/imglogin" />
     <!-- Loading Indicator for overall screen   -->
    <com.mohammedalaa.gifloading.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:src="@drawable/spinnerloadfinal"/>

     <!-- Loading Indicator for login click button    -->
    <com.mohammedalaa.gifloading.LoadingView
        android:id="@+id/loading_view_button"
        android:layout_width="@dimen/_87sdp"
        android:layout_height="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_240sdp"
        android:layout_below="@+id/tvForgotPass"
        android:visibility="gone"
        app:src="@drawable/spinnerbutfinal"/>

   
    <ImageView
        android:src="@drawable/asset1"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_182sdp"
        android:layout_below="@id/tvForgotPass"
        android:layout_marginTop="@dimen/_95sdp"
        
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewdown" />
    <ImageView
        android:src="@drawable/group251"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView2"
        android:id="@+id/imageView9" />
   
    


     <android.support.design.widget.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:id="@+id/textInputLayout1"
        android:paddingLeft="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        
        android:layout_marginStart="@dimen/_60sdp"
        
       
        
        >
         

     <android.support.design.widget.TextInputEditText
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:id="@+id/editpass"
        android:inputType="textPassword"
        android:textStyle="bold"   
            
        android:textColor="#000"

        />

        
     </android.support.design.widget.TextInputLayout>

</RelativeLayout>