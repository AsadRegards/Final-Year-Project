<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    
    <ImageView
        android:src="@drawable/headcontribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="4dp" 
        android:id="@+id/textviewhead"
        android:layout_centerHorizontal="true"
       
         />
    <ImageView
        android:src="@drawable/ffundsicn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        
        android:id="@+id/imgaccounticon"
       
         />
        <ImageView
        android:src="@drawable/backgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="15dp"
        android:id="@+id/imggoback"
       
         />
    <ImageView
        android:src="@drawable/rel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imglinehead"
        android:layout_below="@+id/textviewhead"
       
         />
     <ImageView
        android:src="@drawable/issueimgg"
        android:layout_width="match_parent"
        android:layout_height="200dp"   
        android:layout_marginTop="20dp"
        android:id="@+id/imgissuev"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imglinehead"
         />
    
        
        

        <TextView
            android:text="Open Road Spill near Gulshan e Iqbal"
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgissuev"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:maxLines="3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="60dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:id="@+id/tvinfo" />
        <TextView
            android:text="Estimated Cost :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvinfo"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:id="@+id/tvEstimatedCost" />
        <TextView
            android:text="2000 Rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/tvEstimatedCost"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/tvEstimatedCostAmount" />
    <TextView
            android:text="Collected Amount :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEstimatedCost"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:textColor="#000"
            android:textStyle="normal"
            android:id="@+id/tvCollected"
        />
        <TextView
            android:text="2000 Rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEstimatedCost"
            android:layout_toRightOf="@+id/tvCollected"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/tvCollectedAmount" />


    <ImageView
        android:src="@drawable/icncontributefund"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
       android:layout_centerHorizontal="true"
        android:id="@+id/imgContribute"
        
        
        android:layout_below="@+id/tvCollectedAmount"
         />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/close"
        android:src="@drawable/cclose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
       />
       

</RelativeLayout>
