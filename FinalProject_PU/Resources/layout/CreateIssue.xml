<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
     
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tev1"
        android:text="@string/Create"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imga2"
        android:src="@drawable/blueemptyicon"
       android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
         
        />
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/tvusername"
        android:layout_marginStart="89dp"
        android:layout_marginTop="30dp"/>


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/issueinfo"
        android:layout_below="@id/tvusername"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/textviewinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"/>

   

     <ImageView
        android:src="@drawable/group3285"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewinfo"
        android:layout_marginTop="100dp"
        android:layout_marginStart="77dp"
        android:id="@+id/capture_image"
        android:layout_centerHorizontal="true"
         />
     <ImageView
        android:src="@drawable/group3286"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/capture_image"
        android:layout_marginTop="30dp"
        android:layout_marginStart="77dp"
        android:id="@+id/upload_img"
         />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/close"
        android:src="@drawable/cclose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
       />

</RelativeLayout>
