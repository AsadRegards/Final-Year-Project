<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FoundVehicle2_tev1"
        android:text="@string/FoundVehicle_head"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
   
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/next_FoundVehicle2"
        android:src="@drawable/iconnext"
        android:layout_marginTop="12dp"
        android:layout_marginStart="320dp"/>
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView_FoundVehicle2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/FoundVehicle2_tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FoundVehicle2_text"
        android:layout_below="@+id/FoundVehicle2_tvusername"
        android:textSize="12dp"
        android:id="@+id/FoundVehicle2_tv"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:src="@drawable/homelocationicon"
        android:layout_width="135dp"
        android:layout_height="240dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/FoundVehicle2_tvusername"
        android:id="@+id/FoundVehicle2_homelocation"
           />

   
     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="80dp"
        android:layout_below="@+id/FoundVehicle2_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/FoundVehicle2_Radiobtn1" />

        <ImageView
        android:src="@drawable/worklocationicon"
        android:layout_width="135dp"
        android:layout_height="240dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="190dp"
        android:layout_below="@+id/FoundVehicle2_tvusername"
        android:id="@+id/FoundVehicle2_worklocation"
           />


     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="245dp"
        android:layout_below="@+id/FoundVehicle2_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/FoundVehicle2_Radiobtn2" />
 
     <ImageView
        android:src="@drawable/otherlocationicon"
        android:layout_width="135dp"
        android:layout_height="240dp"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/FoundVehicle2_tv"
        android:id="@+id/FoundVehicle2_otherlocation"
           />


     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/FoundVehicle2_Radiobtn2"
        android:background="@drawable/ellipse1"
        android:id="@+id/FoundVehicle2_Radiobtn3" />
 
    
</RelativeLayout>
