<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    
     <ImageView
        android:src="@drawable/backgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        
        android:id="@+id/imgbackgo"
       
         />
     <ImageView
        android:src="@drawable/accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgheadaccounts"
       
         />
    <ImageView
        android:src="@drawable/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        
        android:id="@+id/imgaccounticon"
       
         />
    <ImageView
        android:src="@drawable/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imglinehead"
        android:layout_below="@+id/imgheadaccounts"
       
         />
    <Refractored.Controls.CircleImageView
        android:src="@drawable/usericon"
        android:layout_width="70dp"
        android:layout_height="70dp"   
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"

        android:id="@+id/usericon"
        android:layout_below="@+id/imgheadaccounts"
       
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="90dp"
        android:textColor="#000"
        android:id="@+id/username"
        android:layout_below="@+id/imgheadaccounts"
       
        />
    <ImageView
        android:src="@drawable/cp"
        android:layout_width="392dp"
        android:layout_height="wrap_content"   
        android:layout_marginTop="20dp"
        android:layout_below="@+id/usericon"
        android:id="@+id/imgchangepass"
       
         />
    <ImageView
        android:src="@drawable/cpn"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgchangeno"
        android:layout_below="@+id/imgchangepass"
         />
       <ImageView
        android:src="@drawable/chusername"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgchangeusername"
        android:layout_below="@+id/imgchangeno"
         />
</RelativeLayout>
