<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

        <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/close"
        android:src="@drawable/cclose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
       />

             <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#646464"
            android:layout_marginTop="50dp"
            android:id="@+id/lise"/>
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Garbage_tev1"
        android:text="@string/Garbage_Head"
        android:textColor="#3c46e4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
  
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/next_Garbage"
        android:src="@drawable/iconnext"
        android:layout_marginTop="12dp"
        android:layout_marginStart="320dp"/>
    <Refractored.Controls.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/iconsss"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/circleImageView_Garbage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:layout_below="@id/lise"
        android:textSize="15dp"
        android:id="@+id/Garbage_tvusername"
        android:layout_marginStart="85dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Garbage_text"
        android:layout_below="@+id/Garbage_tvusername"
        android:textSize="12dp"
        android:id="@+id/Garbage_tv"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:src="@drawable/garbagefullroad"
        android:layout_width="185dp"
        android:layout_height="190dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/Garbage_tvusername"
        android:id="@+id/Garbage_FullRoad"
           />

   
     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginStart="75dp"
        android:layout_below="@+id/Garbage_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/Garbage_Radiobtn1" />

        <ImageView
        android:src="@drawable/garbagehalfroad"
        android:layout_width="185dp"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="190dp"
        android:layout_below="@+id/Garbage_tv"
        android:id="@+id/Garbage_HalfRoad"
           />


     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginStart="260dp"
        android:layout_below="@+id/Garbage_tv"
        android:background="@drawable/ellipse1"
        android:id="@+id/Garbage_Radiobtn2" />
 
           <ImageView
        android:src="@drawable/garbagesideroad"
        android:layout_width="185dp"
        android:layout_height="190dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Garbage_tv"
        android:id="@+id/Garbage_SideRoad"
           />


     <RadioButton
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Garbage_Radiobtn2"
        android:background="@drawable/ellipse1"
        android:id="@+id/Garbage_Radiobtn3" />
 
   
</RelativeLayout>
