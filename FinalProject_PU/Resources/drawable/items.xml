<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbars="horizontal|none">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
    >




        <com.dushyant.roundedimageviewlibrary.RoundedImageView
            android:src="@drawable/pothole1"
            android:layout_width="295dp"
            android:layout_height="197dp"          
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:id="@+id/imgIssue"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            />
        <com.dushyant.roundedimageviewlibrary.RoundedImageView

            android:layout_width="295dp"
            android:layout_height="197dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:visibility="visible"
            app:scaleType="centerCrop"
            app:canvasPadding="10"
            app:imagePadding="10"
            app:cornerRadius="10"
            android:scrollbars="horizontal"
            android:id="@+id/imageView1"
            android:scaleType="centerCrop"
            android:contentDescription="description"
            tools:ignore="MissingDimension,Suspicious0dp" />

        <ImageView
            android:src="@drawable/belowbg"
            android:layout_width="310dp"
            android:layout_height="251dp"
            android:layout_marginTop="313dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgbelowPath"
         />
        <Refractored.Controls.CircleImageView
            android:src="@drawable/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="330dp"
            android:layout_marginStart="30dp"
            android:id="@+id/imgProfile"
         />
        
        <TextView
            android:text="Nabeel Khan"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIssue"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imgProfile"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:fontFamily="@"
            android:id="@+id/tvname" />

        <TextView
            android:text="24m"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIssue"
            android:layout_toRightOf="@id/imgProfile"
            android:textSize="10dp"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvtime" />
        


        <TextView
            android:text="Open Road Spill"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIssue"
            android:textSize="15sp"
            
            android:layout_centerHorizontal="true"
            android:maxLines="3"
            android:layout_marginTop="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="60dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvinfo" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnstatushome2"
            android:layout_below="@id/tvinfo"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:id="@+id/ViewStatus"/>
        <TextView
            android:text="View Status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewStatus"
            android:layout_toLeftOf="@id/ViewOnMap"
             android:maxLines="2"
            android:layout_marginStart="35dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvViewstatus" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnmaphome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/ViewStatus"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:id="@+id/ViewOnMap"/>
        <TextView
            android:text="View On Map"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewOnMap"
            android:layout_toLeftOf="@id/Report"
            android:layout_toRightOf="@id/ViewStatus"
             android:maxLines="2"
           android:layout_marginStart="8dp" 
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvViewOnMap" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnreporthome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/ViewOnMap"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:id="@+id/Report"/>
                <TextView
            android:text="Report"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Report"
            android:layout_toLeftOf="@id/ContributeHome"
            android:layout_toRightOf="@id/ViewOnMap"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvReport" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icnfundshome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/Report"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:id="@+id/ContributeHome"/>
        <TextView
            android:text="Fund"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContributeHome"
            android:layout_toLeftOf="@id/GoLast"
            android:layout_toRightOf="@id/Report"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvContribute" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icngolasthome2"
            android:layout_below="@id/tvinfo"
            android:layout_toRightOf="@+id/ContributeHome"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:id="@+id/GoLast"/>
                <TextView
            android:text="Go Last"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContributeHome"
            
            android:layout_toRightOf="@id/ContributeHome"
            android:layout_marginStart="15dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:id="@+id/tvGoLast" />












    </RelativeLayout>



</androidx.cardview.widget.CardView>